<% if @genres.present? %>
  <h4>Genres</h4>
  <ul>
    <% @genres.each do |g| %>
      <li><%= g.name %></li>
    <% end %>
  </ul>
<% end %>
<p>
<strong>Title:</strong>
<%= @movie.title %>
</p>
<p>
<strong>Description:</strong>
<%= @movie.description %>
</p>
<p>
<strong>Movie length:</strong>
<%= @movie.movie_length %>
</p>
<p>
<strong>Director:</strong>
<%= @movie.director %>
</p>
<p>
<strong>Rating:</strong>
<%= @movie.rating %>
</p>

<aside>
<% if @fans.present? %>
    <h4>Fans</h4>
    <ul>
      <% @fans.each do |user| %>
        <li>
          <%= link_to user.name, user %>
        </li>
      <% end %>
    </ul>
  <% end %>
</aside>

<% if @favorite_movies.present? %>
  <h3>Favorite Movies</h3>
  <div class="favorite-movies">
    <% @favorite_movies.each do |movie| %>
      <%= link_to image_tag(movie.image_file_name), movie %>
    <% end %>
  </div>
<% end %>

<% if current_user %>
  <div class="faves">
    <%= button_to "♥️ Fave", favorites_path(@movie) %>
  </div>
<% end %>
<%= link_to 'Back', movies_path %>